<!DOCTYPE html>
<html lang="en">

  <!-- Include the header layout (contains meta tags, links to stylesheets, etc.) -->
  <%- include('layouts/header'); -%>

  <body>

    <!-- Include the navbar layout (usually contains navigation menu or links) -->
    <%- include('layouts/navbar'); -%>

    <!-- Page Header Section -->
    <header class="masthead" style="background-image: url('/img/helloworldlogin.jpeg')">
      <!-- Overlay for the background image -->
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <!-- Main heading for the login page -->
              <h1>Login</h1>
              <!-- Subheading or instructions for the user -->
              <span class="subheading">Login to your account.</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content Section (Login Form) -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <!-- Form to handle user login -->
          <form action="/users/login" method="POST" enctype="multipart/form-data">
            <!-- Input field for username -->
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>User Name</label>
                <input type="text" class="form-control" placeholder="User Name" id="username" name="username">
              </div>
            </div>
            <!-- Input field for password -->
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Password</label>
                <input type="password" class="form-control" placeholder="Password" id="password" name="password">
              </div>
            </div>
            <br>
            <div id="success"></div>
            <!-- Submit button to log in -->
            <button type="submit" class="btn btn-primary" id="sendMessageButton">Login</button>
          </form>
        </div>
      </div>
    </div>

    <hr>

    <!-- Include the footer layout (contains copyright info, social media links, etc.) -->
    <%- include('layouts/footer'); -%>

    <!-- Include JavaScript files (for interactivity, form validation, etc.) -->
    <%- include('layouts/scripts'); -%>

  </body>

</html>
